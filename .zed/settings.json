{
  "lsp": {
    "clangd": {
      "binary": {
        "path": "toolchain/x86_64-elf/bin/x86_64-elf-gcc"
      },
      "initialization_options": {
        "compilationDatabasePath": "${workspaceFolder}",
        "fallbackFlags": [
          "-std=c++17",
          "-g",
          "-ffreestanding",
          "-nostdlib",
          "-fbuiltin",
          "-I${workspaceFolder}",
          "-I${workspaceFolder}/src",
          "-I${workspaceFolder}/src/kernel",
          "-I${workspaceFolder}/toolchain/x86_64-elf/lib/gcc/x86_64-elf/15.1.0/include",
          "--target=x86_64-elf",
          "--sysroot=${workspaceFolder}/toolchain/x86_64-elf"
        ]
      }
    }
  },
  "languages": {
    "C": {
      "format_on_save": "off",
      "preferred_line_length": 80,
      "tab_size": 4
    },
    "C++": {
      "format_on_save": "off",
      "preferred_line_length": 80,
      "tab_size": 4
    }
  },
  "file_types": {
    "C": ["def", "inc", "in", "x", "c"],
    "C++": ["cpp", "hpp"]
  }
}
